<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoapp"
        tools:context=".LoginFragment">

    <TextView
            android:text="Team Message"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:textAlignment="center"
            android:textStyle="bold" android:textSize="36dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserratregular" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" android:paddingLeft="8dp" app:layout_constraintHorizontal_bias="0.091"/>
    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textoCorreo" android:layout_weight="1"
            app:layout_constraintTop_toTopOf="@+id/insertarCorreo"
            app:layout_constraintBottom_toBottomOf="@+id/insertarCorreo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintVertical_bias="1.0"
            android:textAlignment="textStart" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/insertarCorreo" app:layout_constraintHorizontal_bias="0.095"/>
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:inputType="textEmailAddress"
            android:text=""
            android:ems="10"
            android:id="@+id/insertarCorreo" android:layout_weight="1"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/insertarPass"
            app:layout_constraintEnd_toEndOf="@+id/insertarPass"/>

    <TextView
            android:text="ContraseÃ±a:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textoPass" android:layout_weight="1"
            android:textAlignment="viewStart"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/insertarPass" app:layout_constraintHorizontal_bias="0.195"
            app:layout_constraintTop_toTopOf="@+id/insertarPass"
            app:layout_constraintBottom_toBottomOf="@+id/insertarPass" app:layout_constraintVertical_bias="0.555"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text=""
            android:ems="10"
            android:id="@+id/insertarPass" android:layout_weight="1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/insertarCorreo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/login" android:layout_weight="1"
            android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/azulbotones" android:textColor="@android:color/white"/>
    <Button
            android:text="Registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cancelar" android:layout_weight="1"
            app:layout_constraintTop_toTopOf="@+id/login" app:layout_constraintBottom_toBottomOf="@+id/login"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="84dp"
            app:layout_constraintVertical_bias="1.0" android:background="@color/azulbotones"
            android:textColor="@android:color/white" android:padding="10dp"/>
    <ImageView
            android:src="@drawable/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>